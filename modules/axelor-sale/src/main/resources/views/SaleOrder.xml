<?xml version="1.0" encoding="UTF-8"?>

<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  	https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

	<grid model="com.axelor.sale.db.SaleOrder" 
		title="Sale orders"
		name="sale-order-grid">
		<field name="saleOrderSeq" />
		<field name="quotationDateT" />
		<field name="confirmationDateT" />
		<field name="statusSelect" />
		<field name="inTaxTotal" />
		<field name="customer" />
	</grid>

	<grid model="com.axelor.sale.db.SaleOrder"
		title="Quotation orders" 
		name="quotation-sale-order-grid">
		<field name="saleOrderSeq" />
		<field name="quotationDateT" />
		<field name="confirmationDateT" />
		<field name="statusSelect" />
		<field name="inTaxTotal" />
		<field name="customer" />
	</grid>

	<form model="com.axelor.sale.db.SaleOrder" 
		title="Sale order"
		name="sale-order-form" 
		width="large">
		<panel name="saleOrderPanel">
			<field name="statusSelect" widget="navSelect" colSpan="12" />
			<field name="saleOrderSeq" showIf="saleOrderSeq != null" />
			<field name="customer" />
			<panel-related field="saleOrderLineList" colSpan="12" grid-view="sale-order-line-grid" form-view="sale-order-line-form" readonlyIf="statusSelect == 'CONFIRMED'"/>
		</panel>
		<panel name="confirmOrder" sidebar="true" hideIf="statusSelect == 'CANCELLED'">
			<button onClick="finalizeQuotation" name="finalizeQuotation" title="Finalize quotation" showIf="statusSelect == 'DRAFT'" />
			<button onClick="confirmOrder" name="confirmOrder" title="Confirm order" showIf="statusSelect == 'QUOTATION'" />
			<button onClick="cancelOrder" name="cancelOrder" css="btn-danger" title="Cancel order" />
		</panel>
		<panel name="dates" title="Dates" sidebar="true"
			collapseIf="true" readonly="true">
			<field name="quotationDateT" />
			<field name="confirmationDateT" />
		</panel>
		<panel name="titles" title="Prices" sidebar="true" collapseIf="true"
			readonly="true">
			<field name="inTaxTotal" />
		</panel>
	</form>

</object-views> 