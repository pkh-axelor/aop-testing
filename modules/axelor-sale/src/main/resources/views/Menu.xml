<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

	<menuitem title="Sale" 
		name="sale-root" 
		icon="fa-line-chart"
		icon-background="yellow" />

	<menuitem title="All sale orders"
		name="sale-root-all_sale_orders" 
		parent="sale-root"
		action="action-sale-order" />
		<action-view name="action-sale-order" 
			title="Sale order"
			model="com.axelor.sale.db.SaleOrder">
			<view type="grid" name="sale-order-grid" />
			<view type="form" name="sale-order-form" />
		</action-view>


	<menuitem title="Quotation sale orders"
		name="sale-root-quotation_order_sale" 
		tag="0" tag-style="important"
		tag-count="true" 
		parent="sale-root" 
		action="sale-quotation-sale-order" />
		<action-view name="sale-quotation-sale-order"
			title="Quotation sale order" 
			model="com.axelor.sale.db.SaleOrder">
			<view type="grid" name="sale-order-grid" />
			<view type="form" name="sale-order-form" />
			<domain>self.statusSelect = "quotation"</domain>
		</action-view>


	<menuitem title="Configuration" 
		name="sale-root-configuration"
		parent="sale-root" 
		icon="fa-gear" />


	<menuitem title="Product categories"
		name="sale-root-configuration-product_categories"
		parent="sale-root-configuration" 
		action="action-product-categories" />
		<action-view name="action-product-categories"
			title="Product categories" 
			model="com.axelor.sale.db.ProductCategory">
			<view type="grid" name="product-category-grid" />
			<view type="form" name="product-category-form" />
		</action-view>


	<menuitem title="Product categories tree"
		name="sale-root-configuration-product_categories_tree"
		parent="sale-root-configuration" />


	<menuitem title="Products"
		name="sale-root-configuration-products"
		parent="sale-root-configuration" 
		action="action-product" />
		<action-view name="action-product" 
			title="Products"
			model="com.axelor.sale.db.Product">
			<view type="grid" name="product-grid" />
			<view type="form" name="product-form" />
		</action-view>


	<menuitem title="Data" 
		name="sale-root-data" 
		icon="fa-list"
		parent="sale-root" />


	<menuitem title="Sale order lines"
		name="sale-root-data-sale_order_lines" 
		parent="sale-root-data"
		action="action-sale-order-line" />
		<action-view name="action-sale-order-line"
			title="Sale order line" 
			model="com.axelor.sale.db.SaleOrderLine">
			<view type="grid" name="sale-order-line-grid" />
			<view type="form" name="sale-order-line-form" />
			<view-param name="search-filter" value="searchFilters" />
		</action-view>

		<search-filters name="searchFilters"
			model="com.axelor.sale.db.SaleOrderLine" 
			title="Search">
			<filter title="Draft lines">
				<domain>self.saleOrder.statusSelect = "draft"</domain>
			</filter>
			<filter title="Quotation lines">
				<domain>self.saleOrder.statusSelect = "quotation"</domain>
			</filter>
			<filter title="Confirmed lines">
				<domain>self.saleOrder.statusSelect = "confirmed"</domain>
			</filter>
			<filter title="Cancelled lines">
				<domain>self.saleOrder.statusSelect = "cancelled"</domain>
			</filter>
		</search-filters>

</object-views>